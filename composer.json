{
  "name": "pyxl/site",
  "description": "Site version & installation configuration",
  "authors": [
    {
      "name": "Michael Mizner",
      "email": "mmizner@pyxl.com"
    }
  ],
  "config": {
    "name": "Mizner",
    "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ]
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://composer.deliciousbrains.com/3998821A01BD70FAD9531E70B4F5EE17"
    },
    {
      "type": "vcs",
      "url": "https://bitbucket.org/pyxlinc/pyxl-layouts.git"
    },
    {
      "type": "composer",
      "url": "https://composer.pyxl.com"
    },
    {
      "type": "package",
      "package": {
        "name": "nickforddesign/acf-swatch",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/nickforddesign/acf-swatch/archive/master.zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "mcguffin/acf-duplicate-repeater",
        "version": "1.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://github.com/mcguffin/acf-duplicate-repeater/archive/master.zip"
        }
      }
    }
  ],
  "require-dev": {
    "wpackagist-plugin/query-monitor": "^3.3"
  },
  "require": {
    "php": "^7.1",
    "deliciousbrains-plugin/wp-migrate-db-pro": "*",
    "deliciousbrains-plugin/wp-migrate-db-pro-cli": "*",
    "deliciousbrains-plugin/wp-migrate-db-pro-media-files": "*",
    "deliciousbrains-plugin/wp-offload-media": "*",
    "mcguffin/acf-duplicate-repeater": "*",
    "nickford/acf-swatch": "*",
    "pyxl/acf-pro": "^5.8.0",
    "pyxl/gravity-forms": "^2.4",
    "vlucas/phpdotenv": "^3.3",
    "wpackagist-plugin/acf-image-crop-add-on": "^1.4",
    "wpackagist-plugin/acf-repeater-flexible-content-collapser": "^1.2",
    "wpackagist-plugin/imsanity": "^2.4",
    "wpackagist-plugin/kirki": "^3.0",
    "wpackagist-plugin/post-duplicator": "^2.20",
    "wpackagist-plugin/simple-page-ordering": "^2.3",
    "wpackagist-plugin/timber-library": "1.9.4",
    "wpackagist-plugin/wordpress-seo": "^11.0"
  },
  "scripts": {
    "post-install-cmd": [
      "@wp_core_download"
    ],
    "post-update-cmd": [
    ],
    "lint": [
      "phpcs ./wp-content/plugins/_core"
    ],
    "repeat": [
      "echo {$config}"
    ],
    "setup": [
      "composer install",
      "@wp_core_download",
      "npm install --prefix wp-content/themes/view",
      "@build"
    ],
    "start": [
      "npm run --prefix wp-content/themes/view start"
    ],
    "build": [
      "npm run --prefix wp-content/themes/view build"
    ],
    "prod": [
      "composer install --no-dev --optimize-autoloader"
    ],
    "wp_core_download": "wp core download --path=core --skip-content --force --version=5.2"
  }
}
